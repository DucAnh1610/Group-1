<h1>List Orders</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Status</th>
            <th>Delivery Address</th>
            <th>Order date</th>
            <th>Detail</th>


        </tr>
    </thead>
    <tbody>
    <h1>{{userRole}}</h1>
        {{#each orders}}
        <tr>
            <td>{{name}}</td>
            <td>{{phone}}</td>
            <td>{{status}}</td>
            <td>{{address}}</td>
            <td onload="formatDate(this)">{{date}}</td>

            <td><a href="order/detail?id={{_id}}">Detail</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
