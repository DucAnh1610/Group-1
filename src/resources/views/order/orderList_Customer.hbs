<h1>List Orders</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Item</th>


            <th>Delete</th>
            <th>Edit</th>
            <th>Detail</th>


        </tr>
    </thead>
    <tbody>
        {{#each orders}}
        <tr>
            <td>{{name}}</td>
            <td>{{phone}}</td>
            <td>ssff</td>

            <td><a href="/delete?id={{_id}}" onclick="return confirm('Are you sure?')">Delete</a></td>
            <td><a href="product/edit?id={{_id}}">Edit</a></td>
            <td><a href="product/detail?id={{_id}}">Detail</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>